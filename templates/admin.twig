{% extends 'layout.twig' %}
{% block title %}Administration
{% endblock %}
{% block content %}
	<h2>Listes de commentaires en attente de validation</h2>
	<div class="containers-comments">
		<div class="card-comment">
			{% for comment in comments %}
				<h4>{{ comment.username }}</h4>
				<p>Le
					{{ comment.commentDate }}</p>
				<p>{{ comment.content }}</p>
				<a href="/blog/article/{{ comment.postId }}">Voir le post</a>
			{% endfor %}
		</div>
	</div>
{% endblock %}
