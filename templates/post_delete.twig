{% extends 'layout.twig' %}
{% block title %}Suppression de l'article
{% endblock %}
{% block content %}
	<div class="container-posts">
		<h2 class="title">Suppression de l'article</h2>
		<div class="wrapper-inputs container-single-post">
			<h3 class="title">Voulez-vous vraiment supprimer cette article ?</h3>
			<div class="post-actions-delete">
				<form action="/blog/suppression-article/{{ post.postId }}" method="post">
					<input type="hidden" name="_METHOD" value="DELETE"/>
					<button class="btn btn-danger" type="submit">Supprimer</button>
				</form>
				<a class="btn btn-secondary" href="/blog">Revenir à la page de blog</a>
			</div>
			{% if error %}
				<p class="error">{{ error }}</p>
			{% endif %}
		</div>
		<div class="card-post post-detail">
			<div class="card-header">
				<h2>{{ post.title }}</h2>
				<h4>Créé par
					{{ post.username }}</h4>
				<p>{{ post.updateDate ? 'Modifié le' : 'Le'}}
					{{ post.updateDate ? post.updateDate : post.creationDate }}</p>
			</div>
			<div class="card-content">
				<p class="post-chapo">{{ post.chapo }}</p>
				{% if post.image %}
					<img src="/assets/posts/{{ post.image }}" alt={{ post.title }}>
				{% endif %}
				<p class="post-content">{{ post.content }}</p>
			</div>
		</div>
	</div>
{% endblock %}
