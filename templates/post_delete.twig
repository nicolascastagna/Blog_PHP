{% extends 'layout.twig' %}

{% block title %}Suppression de l'article
{% endblock %}
{% block content %}
	<div class="container-posts">
		<h2 class="title">Suppression de l'article</h2>
		<div class="actions-single-post">
			<h3>Souhaitez-vous vraiment supprimer cet article ?</h3>
			<form action="/blog/suppression-article/{{ post.postId }}" method="post">
				<input type="hidden" name="_METHOD" value="DELETE"/>
				<input class="button-form" value="Supprimer" type="submit"/>
			</form>
			{% if error %}
				<p class="error">{{ error }}</p>
			{% endif %}
			<a class="button-form" href="/blog">Revenir Ã  la page de blog</a>
		</div>
		<div class="card-post">
			<div class="card-header">
				<h2>{{ post.title }}</h2>
				<h4>{{ post.username }}</h4>
				<p>{{ post.creation_date }}</p>
			</div>
			<div class="card-content">
				<p class="post-chapo">{{ post.chapo }}</p>
				{% if post.image %}
					<img src="/assets/posts/{{ post.image }}" alt={{ post.title }}>
				{% endif %}
				<p class="post-content">{{ post.content }}</p>
			</div>
		</div>
	</div>
{% endblock %}
