{% extends 'layout.twig' %}
{% block title %}Portfolio
{% endblock %}
{% block content %}
	<div>
		<div class="hero">
			<div class="hero-title">
				<h2>Nicolas Castagna</h2>
				<h3>Développeur d'application Symfony/React<h3>
						<h3 class="sub-title">Le développeur qu'il vous faut !</h3>
					</div>
					<div class="hero-img">
						<img src="assets/hero/ui_dev.png" alt="picture-profil"/>
					</div>
				</div>
				<div>
					<div class="icons-container">
						<ul>
							<li><a target="_blank" href="https://github.com/nicolascastagna"><img src="assets/icons/github.webp" loading="lazy" alt=""></a></li>
							<li><a target="_blank" href="https://www.linkedin.com/in/nicolas-castagna-259bb61b1/"><img src="assets/icons/linkedin.webp" loading="lazy" alt=""></a></li>
						</ul>
					</div>
				</div>
				<div>
					<div class="container-cards">
						<h2>Derniers articles</h2>
						<div class="container-posts">
							{% for post in posts %}
								<div class="card-post">
									<div class="card-header">
										<h4>{{ post.author }}</h4>
										<p>Le
											{{ post.creation_date }}</p>
									</div>
									<h4>{{ post.title }}</h4>
									<div class="card-content">
										<p>{{ post.chapo }}</p>
										<a href="#">Lire la suite</a>
									</div>
									<div class="card-action">
										<a href="#">Modifier</a>
										<a href="#">Supprimer</a>
									</div>
								</div>
							{% endfor %}
						</div>
					</div>
				</div>
			{% endblock %}
